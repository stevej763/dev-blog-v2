{{>partials/header}}
{{>partials/navbar}}
<main>
    <div class="homepage-container">
        <hr class="post-ruler">
        <div>
            <h2 class="homepage-subheading">Latest Posts</h2>
            <div class="post-list">
                {{#latestPosts}}
                        <a class="post-card post-link" href="/blog-post/{{id}}">
                            <div class="main-card-container">
                                <img class="post-image" src={{headerImageUrl}}>
                                <div class="card-text-content">
                                    <h2 class="listed-post-title">{{title}}</h2>
                                    <p>{{description}}</p>
                                </div>
                            </div>
                            <div class="card-info-content">
                                <p>{{prettyDate}}</p>
                                <p>Category: {{category.value}}</p>
                            </div>
                        </a>
                {{/latestPosts}}
            </div>
            <hr class="post-ruler">
            <h2 class="homepage-subheading">Featured Posts</h2>
            <div class="post-list">
                {{#featuredPosts}}
                    <div class="post-card">
                        <img class="post-image" src={{headerImageUrl}}>
                        <div class="card-text-content">
                            <h2>{{title}}</h2>
                            <p>{{description}}</p>
                            <p>category: {{category.value}}</p>
                            <p>published: {{publishDate}}</p>
                        </div>
                        <a class="read-more-button" href="/blog-post/{{id}}">Read more -></a>
                    </div>
                {{/featuredPosts}}
            </div>
        </div>
    </div>
</main>
{{>partials/footer}}